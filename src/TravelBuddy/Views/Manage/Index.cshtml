
@model IndexViewModel
@using TravelBuddyDatabase.Enums;
@{
    ViewData["Title"] = "Manage your account";
}

<h2>@ViewData["Title"]</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>

    <form asp-action="Index" enctype="multipart/form-data">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-lg-offset-4 col-md-3 col-sm-5">
                    <img src="@Url.Content(Model.PathToImage)" alt="Image" class="img-responsive img-rounded" />
                    <input name="image" type="file">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="City" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Birthday" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<GenderType>()"></select>
                    <span asp-validation-for="Gender" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email_profil" class="col-sm-4 control-label">Email</label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Email_profil" class="form-control" />
                    <span asp-validation-for="Email_profil" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Skype" class="col-sm-4 control-label"></label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Skype" class="form-control" />
                    <span asp-validation-for="Skype" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AboutMe" class="col-sm-4 control-label">About me</label>
                <div class="col-md-3 col-sm-5">
                    <textarea rows="4" cols="50" asp-for="AboutMe" class="form-control"></textarea>
                    <span asp-validation-for="AboutMe" class="text-danger" />
                </div>
            </div>
            @*<div class="form-group">
                <label asp-for="Ratings" class="col-sm-4 control-label">Rating</label>
                <div class="col-md-3 col-sm-5">
                    <input asp-for="Ratings" class="form-control" />
                    <span asp-validation-for="Ratings" class="text-danger" />
                </div>
            </div>*@
            <div class="form-group">
                <div class="col-md-offset-6 col-md-10">
                    <input type="submit" value="Save" class="btn btn-danger" />
                </div>
            </div>
            
            <input asp-for="Id" type="hidden"/>
        </div>
    </form>

    <hr />
    <dl class="dl-horizontal">
        <dt></dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-danger">Change password</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
            }
        </dd>
